<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adjustItemViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp0"
    android:layout_marginTop="@dimen/dp2"
    android:layout_marginRight="@dimen/dp0"
    android:layout_marginBottom="@dimen/dp2"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp"
    tools:background="#f7d775">

    <ImageView
        android:id="@+id/adjustToolsImgView"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/svg_brightness"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/adjustToolsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adjustToolsImgView"
        android:textSize="@dimen/dp9"
        tools:text="Brightness"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>


