    <LinearLayout
        android:id="@+id/idCameraImageLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cameraRecyclerLayout"
        android:layout_below="@+id/toolbarCameraLayout"
        android:background="@color/white"
        android:padding="@dimen/dp7">

        <RelativeLayout
            android:id="@+id/idCameraRLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/cameraFrameShape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/cameraSelectedImageShape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:src="@drawable/svg_gallery_place_holder_48" />
            </FrameLayout>

           <!-- <ImageView
                android:id="@+id/idMainCameraFrameImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />-->

        </RelativeLayout>
    </LinearLayout>





    <LinearLayout
            android:id="@+id/cameraRecyclerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cameraBootomLayout"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/idCameraListRecycleView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_selected"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp1"
                android:paddingRight="@dimen/dp1"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cameraFilterView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_selected"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp1"
                android:paddingRight="@dimen/dp1"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/imageEffectsThumbnails"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_selected"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp1"
                android:paddingRight="@dimen/dp1"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/toolsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_selected"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp1"
                android:paddingRight="@dimen/dp1"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/idCameraFrameRecycleView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_selected"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp1"
                android:paddingRight="@dimen/dp1"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
            <LinearLayout
                android:id="@+id/cameraEffectsSeekbarLLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >
                <include
                    layout="@layout/adjust_camera_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cameraBootomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include
                layout="@layout/camera_edittools_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp1"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp1"
                android:paddingBottom="@dimen/dp10" />
        </LinearLayout>


    </RelativeLayout>

